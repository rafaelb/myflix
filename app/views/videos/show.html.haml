%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="/tmp/monk-large.jpg")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span= "Rating: #{@video.rating}/5.0"
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@video, @review] do |f|
        %fieldset
          = f.select :rating,
          options_for_select([['5 Stars', 5], ['4 Stars', 4], ['3 Stars', 3], ['2 Stars', 2], ['1 Star', 1]]),
          label: 'Rate this video', class: 'col-sm-3'
          = f.text_area :content, label: 'Write Review', rows: 6
          = f.form_group do
            = f.submit 'Submit'
            = link_to 'Cancel', video_path(@video)
      %header
        %h3 User Reviews(#{@video.reviews.count})
      %ul
        = render @video.reviews.reload