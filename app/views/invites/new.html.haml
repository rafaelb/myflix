%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@invite, layout: :horizontal) do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        = f.text_field :recipient_name,  label: "Friend's Name"
        = f.email_field :recipient_email, label: "Friend's Email"
        = f.text_area :message, class: 'span4', rows: 6, label: "Invitation Message", placeholder: "Please join this really cool site!"
        = f.form_group do
          = f.submit "Send Invitation"
